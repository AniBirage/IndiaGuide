<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/indiabg"
    tools:context=".Activity223">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-black"
                android:gravity="center_horizontal"
                android:text="Restaurants"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Madurai Kitchen"
                android:layout_marginTop="1dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/maduraikitchen" />

            <TextView
                android:id="@+id/editTextTextMultiLine2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="Madurai Kitchen is famous for its great service and friendly staff, that is always ready to help you. There is cozy atmosphere at this place. Search through the Indian menu. Taste good seafood, soup and chicken at this restaurant when you happen to be near it. Great coffee will make your meal tastier and you'll surely come back."
                android:gravity="start|top"
                android:inputType="textMultiLine"
                tools:ignore="RtlCompat" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Hotel Royal Court"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"/>
            <ImageView
                android:id="@+id/image2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/hotelroyalcourt" />

            <TextView
                android:id="@+id/editTextTextMultiLine3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:text="Crystal Multicuisine Restaurant at Hotel Royal Court, is a land of magical flavours. Explore the taste of Madurai as we serve you some of the most authentic collection of recipes and the choice is varied and appetizing that the city prides itself for. The diner can accommodate up to 80 guests and comes with an ambient setting for a great a-la-carte and buffet treat. Some of our signature dishes include our delicious Mutton Biriyani, Grilled Chicken and Fish Masala Fry. We offer some of the most delightful Continental, Chinese and Indian gourmet that pleasant surprise you with its taste, flavours and appearance. For the lovers of traditional cuisine, we do Madurai delicacies with a sprinkle of love. So, wait no more and walk upto Crystal - one of the best buffet restaurants in Madurai!"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Phil's Bistro"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/image3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/philsbistro"/>

            <TextView
                android:id="@+id/editTextTextMultiLine4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="Phil's's Bistro Italian American Restaurant is headed by Chef Philip. The first Italian American Cuisine at Madurai. Each dish is prepared and served individually from the finest and freshest foods. Make your selection from our extensive menu of Italian and American cuisine and enjoy one of the best meals you've ever had! The restaurant successfully combines cuisine and atmosphere to create a dining experience that won't soon be forgotten."
                android:gravity="start|top"
                android:inputType="textMultiLine"
                tools:ignore="RtlCompat" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>