<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/indiabg"
    tools:context=".Activity297">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-black"
                android:gravity="center_horizontal"
                android:text="Restaurants"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Bukhara"
                android:layout_marginTop="1dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/bukhara" />

            <TextView
                android:id="@+id/editTextTextMultiLine2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="Bukhara allows you to experience more than just the cuisine. It is the finest representation of Indian culinary traditions through the showcase of the region. The experience of the culture through the food is as subtle as the flavours themselves. In an era when change is the order of the day, Bukhara epitomizes timelessness with a menu that has remained unchanged for almost 4 decades. It stands testimony to the very roots of a culture that is defined by its 5,000-year old tradition."
                android:gravity="start|top"
                android:inputType="textMultiLine"
                tools:ignore="RtlCompat" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Olive Bar &amp; Kitchen"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"/>
            <ImageView
                android:id="@+id/image2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/olivekitchen" />

            <TextView
                android:id="@+id/editTextTextMultiLine3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:text="Olive Qutub is a hideaway where good food, laughter, culture and conversation come together in a delightful melting pot. Fashion, art, music and style fuse here to create an unforgettable Mediterranean mosaic. Dappled sunlight on soft arm chairs. A white pebbled courtyard punctuated by bougainvillea. Worlds collide and time stops in this Mogul mansion turned alfresco Mediterranean restaurant. Casual elegance with its beautiful white walls, a vast Banyan canopy, and a stunning, star-lit, and a tree-top terrace bar under the shadow of the Qutub Minar makes it the best restaurant in Delhi. Welcome to a space so stunning that the Condé Nast Traveler US rated this multi-award winning restaurant as one of the world’s best new restaurants in 2004."
                android:textAlignment="center"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Indian Accent"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/image3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/indianaccent"/>

            <TextView
                android:id="@+id/editTextTextMultiLine4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="Literally accenting Indian food with global touches, chef Manish Mehrotra’s unique fusion menu includes the likes of blue cheese naan and chicken tikka meatballs. The restaurant is located in the swanky Lodhi Hotel and also boasts locations in New York and London. We highly suggest opting for the chef’s six-course tasting menu—each one comes paired with a wine selection."
                android:gravity="start|top"
                android:inputType="textMultiLine"
                tools:ignore="RtlCompat" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>