<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/indiabg"
    tools:context=".Activity99">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-black"
                android:gravity="center_horizontal"
                android:text="Hotels (For Stay)"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Best Western Country Woods"
                android:layout_marginTop="1dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/bestcountry" />

            <TextView
                android:id="@+id/editTextTextMultiLine2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="Spread over a sprawling 5 acres of lush green beautiful land on the Ambala-Delhi highway (NH-1) Best Western Ambala is situated at a very convenient and spectacular location with a panoramic view of the Greenery. Railway Station is only 15 minutes away and it is only 7 Kms away from Shahbad city, affording ease of transportation. The hotel provides its guests a wide choice of well designed 42 air conditioned exclusive rooms and suites that speak of contemporary chic with classic elegance. The hotel has been designed in a very contemporary fashion keeping in mind the comfort and luxury of its corporate, highway &amp; leisure clients. Business/corporate travelers can take advantage of the conference and meeting rooms. It has plus points of easy access to the city, so you can get a piece of the city action, at the same time providing a soothing escape from the city. The hotel has incorporated services and facilities of the highest standards. Along with luxurious rooms and suites the hotel has multiple restaurants and bar, SPA, GYM, conference hall, stylish discotheque, banquet halls, sparkling rooftop Swimming Pool &amp; host of other services like Destination Wedding and others facilities."
                android:gravity="start|top"
                android:inputType="textMultiLine"
                tools:ignore="RtlCompat" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="MM Continental"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"/>
            <ImageView
                android:id="@+id/image2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/mmconti" />

            <TextView
                android:id="@+id/editTextTextMultiLine3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:text="From its prime location in the vicinity of NH 73 between Ambala and Yamuna Nagar the M. M. Continental stands the solitary and proud 3star edifice nearly 60 Km from the Chandigarh international airport and just 20 minutes drive from business cities Ambala and Yamunanagar."
                android:textAlignment="center"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Red Huts Resort"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/image3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/redhuts"/>

            <TextView
                android:id="@+id/editTextTextMultiLine4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="This place provides its guests a rich choice of tastefully designed 21 air conditioned &amp; exclusive rooms."
                android:gravity="start|top"
                android:inputType="textMultiLine"
                tools:ignore="RtlCompat" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>